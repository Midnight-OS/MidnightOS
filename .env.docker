# MidnightOS Configuration Template
# ============ Platform Configuration ============
NODE_ENV=development
PLATFORM_PORT=3001
FRONTEND_PORT=3000

# ============ Database ============
DATABASE_PATH=./data/midnightos.db
REDIS_URL=redis://localhost:6379

# ============ Security ============
JWT_SECRET=change-this-in-production-to-random-string
ENCRYPTION_KEY=32-char-encryption-key-change-me

# ============ Docker ============
DOCKER_HOST=unix:///var/run/docker.sock
USER_DATA_PATH=./user-data

# ============ Port Allocation ============
PORT_RANGE_START=4000
PORT_RANGE_END=5000

# ============ Midnight Network ============
NETWORK_ID=TestNet
USE_EXTERNAL_PROOF_SERVER=true
PROOF_SERVER=http://localhost:6300
INDEXER=https://indexer.devnet.midnight.network:443
INDEXER_WS=wss://indexer.devnet.midnight.network:443
MN_NODE=https://rpc-node-devnet.midnight.network

# ============ Tier Resource Limits ============
TIER_BASIC_MEMORY=256M
TIER_BASIC_CPU=0.25
TIER_BASIC_BOTS=3

TIER_PREMIUM_MEMORY=512M
TIER_PREMIUM_CPU=0.5
TIER_PREMIUM_BOTS=10

TIER_ENTERPRISE_MEMORY=1024M
TIER_ENTERPRISE_CPU=1.0
TIER_ENTERPRISE_BOTS=unlimited

# ============ AI Configuration (Optional) ============
# OpenAI (for Eliza agents)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (alternative)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Local Ollama (for privacy)
OLLAMA_URL=http://localhost:11434

# ============ Default Admin ============
ADMIN_EMAIL=admin@midnightos.local
ADMIN_PASSWORD=changeme123

# ============ Monitoring ============
ENABLE_METRICS=true
METRICS_PORT=9090

# ============ Logging ============
LOG_LEVEL=info
LOG_FORMAT=json



